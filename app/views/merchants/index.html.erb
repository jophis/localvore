<h1> Merchants </h1>
<%= link_to "Home", root_url %><br />
<%= link_to "Post a new Merchant", new_merchant_path %>
<br>
<br>
<%= form_tag farms_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>

<div id="merch-index"></div>
<div id="map-container">
  <div id="map-canvas"></div>
</div>
<div id="geo-locate"></div>

 <%= render @merchants %>


<script type="text/javascript">
  merch_coords = <%= raw @merchants.map { |f| { latitude: f.latitude.to_f, longitude: f.longitude.to_f, infoWindow: (render partial: "info_window", locals: {merchant: f})}}.to_json %>
</script>