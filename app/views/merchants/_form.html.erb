<%= form_for @merchant do |f| %>
  <div class="row">
    <div class="small-9 columns">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row">
    <div class="small-9 columns">
      <%= f.label :address %><br>
      <%= f.text_field :address %>
    </div>
  </div>
  <div class="row">
    <div class="small-9 columns">
      <%= f.label :phone_number %><br>
      <%= f.text_field :phone_number %>
    </div>
  </div>
  <div class="row">
    <div class="small-9 columns">
      <div class="projectinfo">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
    </div>
  </div>

   <!--  <div class="field">
    <%= f.label :tags_list, "Available Products"  %><br />
    <%= f.text_area :tag_list %>
  </div> -->
  <br>

  <div class="row">
    <div class="small-9 columns">
      <div class="projectinfo">
        <%= f.label :farm_ids, "Sources" %><br>
        <%= f.select :farm_ids, options_from_collection_for_select(@farms, :id, :name),{}, { multiple: true, style:"width: 500px;" } %>
      </div>
    </div>
  </div>
    <br>
    <%= f.submit class: "button medium left" %>
  </div>

<% end %>

<%= javascript_tag do %>
  var tag_names = <%= raw tag_names %>;
<% end %>