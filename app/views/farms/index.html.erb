 <h1><%= link_to "Farms", farms_path %> </h1>
<%= link_to "Home", root_url %><br />
<%= link_to "Post a new Farm", new_farm_path %>
<br>
<br>
<%= form_tag farms_path, method: :get, authentication: false, id: 'search-form' do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search" %>
<% end %>


<div id="map-container">
  <div id="map-canvas"></div>
</div>
<div id="geo-locate"></div>
<div id="farms">
  <p>Loading farms</p>
</div>




<%= javascript_tag do %>
	window.coords = <%= raw @farms.map { |f| { latitude: f.latitude.to_f,longitude: f.longitude.to_f, farmName: f.name, address: f.address }}.to_json %>
	<% end %>